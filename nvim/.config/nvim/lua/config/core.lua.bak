vim.g.mapleader        = " "
vim.g.maplocalleader   = "/"

vim.opt.number         = true -- 行号
vim.opt.relativenumber = true -- 相对行号
vim.opt.cursorline     = true -- 高亮光标行
vim.opt.colorcolumn    = "80" -- 高亮列
vim.opt.expandtab      = true -- tab转空格
vim.opt.tabstop        = 4    -- tab转空格的数量
vim.opt.shiftwidth     = 0    -- buffer中默认智能缩进数量
vim.opt.autoread       = true -- 自动同步
vim.opt.hlsearch       = false

vim.opt.splitright     = true
vim.opt.splitbelow     = true

vim.opt.ignorecase     = true
vim.opt.smartcase      = true

vim.opt.showbreak      = '~ '      -- 折行前缀提示符，可改成 ┊、> 等
vim.opt.linebreak      = true
vim.opt.breakindent    = true      -- 折行再缩进，视觉层次更好
vim.opt.breakindentopt = 'shift:2' -- 缩进 2 列

vim.opt.showmode       = false
vim.opt.clipboard:prepend({ "unnamed", "unnamedplus" })

vim.diagnostic.config({
    virtual_text = true,
    -- virtual_lines = true,
    update_in_insert = true,
})

if vim.fn.has('wsl') then
    vim.cmd [[
  augroup Yank
  autocmd!
  autocmd TextYankPost * :call system('/mnt/c/windows/system32/clip.exe ',@")
  augroup END
  ]]
end
